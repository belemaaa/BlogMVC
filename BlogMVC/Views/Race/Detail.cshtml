*@
@{
}

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top"
                         src=@Model.Image
                         width="100%"
                         height="225"
                         alt="Card image cap">

                    <div class="card-body">
                        <p class="card-text">@Model.Title</p>

                        <p class="card-text">@Model.Description</p>

                        <p>Club Address:</p>

                        <p class="card-text">State: @Model.Address.State</p>

                        <p class="card-text">City: @Model.Address.City</p>

                        <p class="card-text">Street: @Model.Address.Street</p>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                {
                                    <a asp-controller="Race"
                                       asp-action="Edit"
                                       asp-route-id="@Model.Id"
                                       type="button"
                                       class="btn btn-sm btn-outline-secondary">
                                        Edit
                                    </a>

                                    <form method="post" asp-area="" asp-controller="Race" asp-action="Delete" asp-route-id="@Model.Id">
                                        <button class="btn btn-outline-danger nav-item">Delete</button>
                                    </form>

                                }
                            </div>

                            <small class="text-muted">@Model.RaceCategory</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
