@model IEnumerable<Race>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top"
                             src=@item.Image
                             width="100%"
                             height="225"
                             alt="Card image cap">

                        <div class="card-body">
                            <p class="card-text">@item.Title</p>

                            <p class="card-text">@item.Description</p>

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a asp-controller="Race"
                                           asp-action="Edit"
                                           asp-route-id="@item.Id"
                                           type="button"
                                           class="btn btn-sm btn-outline-secondary">
                                            Edit
                                        </a>

                                        <form method="post" asp-area="" asp-controller="Race" asp-action="Delete" asp-route-id="@item.Id">
                                            <button class="btn btn-outline-danger nav-item">Delete</button>
                                        </form>
                                    }
                                </div>

                                <small class="text-muted">@item.RaceCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
